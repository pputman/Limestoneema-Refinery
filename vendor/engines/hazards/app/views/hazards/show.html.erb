<% content_for :body_content_title do %>
  <%= @hazard.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @hazard.title %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @hazard.category %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @hazard.content %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="hazards">
      <% @hazards.each do |hazard| %>
        <li>
          <%= link_to hazard.title, hazard_path(hazard) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
